<form action="/logout" method="POST" id="form">
  <button class="pull-right log-out" type="submit">Log Out</button>
</form>

<form class="form" action="/list" method="POST">
  <label for="">Machine</label><br>
 <select name="machine" id="machine" required>
    <option>Choose a machine</option>
      {{#each machines}}
        <option value="{{this._id}}">{{this.machine}}</option>
      {{/each}}
  </select><br><br>
  <label for="">Date</label><br>
  <input type="date" name="date" required><br>
  <label for="">Synthesis</label><br>
  <input type="text" name="synthesis" maxlength="30" required><br><br>
  <label for="">Other Technician</label><br>
  <input type="string" name="otherTechnician"><br><br>
  <label for="">Description</label><br>
  <input type="string" name="description">
  {{!-- <textarea rows="4" cols="50"></textarea><br><br> --}}
  <button type="submit">Submit</button>
</form>



