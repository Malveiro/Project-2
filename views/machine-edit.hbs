{{> header }}

<div style="display: flex; flex-direction:row; height: 100%">
  {{> sidenav }}

  <div class="main">
    <form action="/machine/{{machine._id}}/edit" method="POST">
      <label for="">Name</label><br>
      <input type="text" name="machine" maxlength="10" required value="{{machine.machine}}">
      <br><br>
      <label for="">Model</label><br>
      <input type="text" name="model" value="{{machine.model}}">
      <br><br>
      <label for="">Info</label><br>
      <input type="text" name="info" value="{{machine.info}}">
      <br><br>

      <button type="submit" class="btn btn-primary">Save</button>
      <button type="button" class="btn btn-primary" onclick="location.href='/machine/{{machine._id}}'">Cancel</button>
    </form>
  </div>
</div>