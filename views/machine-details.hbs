{{> header }}

<div style="display: flex; flex-direction:row; height: 100%">
  {{> sidenav }}

  <div class="main">
    <div class="card" style="width: 40rem;">
      <div class="card-body">
        <h3 class="card-title main-color text-center">Machine Details</h3>
        <br>
        <form method="POST" action="/machine/{{machine._id}}/delete">
          <div class="form-group">
            <label for="name">Name</label>
            <input type="text" name="name" value="{{machine.machine}}" class="form-control" readonly>
          </div>
          <div class="form-group">
            <label for="model">Model</label>
            <input type="text" name="model" value="{{machine.model}}" class="form-control" readonly>
          </div>
          <div class="form-group">
            <label for="info">Info</label><br>
            <input type="text" name="info" value="{{machine.info}}" class="form-control" readonly>
          </div>
          <a href="/machine/{{machine._id}}/edit" class="btn btn-outline-primary">Edit</a>
          <button type="submit" class="btn btn-outline-warning">Delete</button type="submit">
        </form>
      </div>
    </div>
  </div>
</div>