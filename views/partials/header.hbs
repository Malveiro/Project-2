<div class="d-flex flex-column flex-md-row align-items-center px-md-4 bg-white border-bottom box-shadow">
  <img class="header-image my-0 mr-md-auto" src="/images/large_boltwork.png" alt="Logo">

  {{#if user}}

  <span><b>
    {{checkingDate message}}
    {{user.username}}
  </b></span>

  <form action="/logout" method="POST" id="form">
    <button class="btn btn-primary ml-3" type="submit">Logout</button>
  </form>

  {{else}}
  <a class="btn btn-primary ml-3" href="/signup">Signup</a>
  <a class="btn btn-primary ml-3" href="/login">Login</a>
  {{/if}}
</div>