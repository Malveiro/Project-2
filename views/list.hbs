<table class="grid">
  <tr>
    <th class="th">Machine</th>
    <th class="th">Date</th>
    <th class="th">Synthesis</th>
  </tr>
  {{#each logs}}
  <tr>
    <td class="td">
      <a href="/machine/{{this.machine._id}}">{{this.machine.machine}}</a>
    </td>
    <td class="td">
      {{dateFormat this.date "DD/MM/YYYY"}}
    </td>
    <td class="td">
      <a href="/details/{{this._id}}">{{this.synthesis}}</a>
    </td>
  </tr>
  {{/each}}
</table>

